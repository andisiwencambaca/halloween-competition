SELECT 
    'chocolate' AS attribute,
    'TRUE' AS value,
    ROUND((SUM(CASE WHEN chocolate = TRUE THEN 1 ELSE 0 END) / 85.0) * 100, 2) AS percent
FROM candy_data

UNION ALL

SELECT 
    'chocolate' AS attribute,
    'FALSE' AS value,
    ROUND((SUM(CASE WHEN chocolate = FALSE THEN 1 ELSE 0 END) / 85.0) * 100, 2) AS percent
FROM candy_data

UNION ALL

